<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/background_item"
    android:padding="@dimen/small_spacing">

    <ImageView
        android:layout_width="@dimen/smaller_button_size"
        android:layout_height="@dimen/smaller_button_size"
        android:paddingRight="@dimen/small_spacing"
        android:src="@drawable/ic_grip" />

    <TextView
        android:id="@+id/im_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@android:color/white"
        android:ellipsize="end"
        android:textSize="@dimen/normal_text"
        android:singleLine="true"
        android:text="my song name" />

    <TextView
        android:id="@+id/im_duration_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00" />
</LinearLayout>